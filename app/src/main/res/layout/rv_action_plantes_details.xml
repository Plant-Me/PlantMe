<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rowActionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_filter_vintage_24px" />

    <TextView
        android:id="@+id/rowActionTypeAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nom Action"
        app:layout_constraintBottom_toBottomOf="@+id/rowActionImageView"
        app:layout_constraintStart_toEndOf="@+id/rowActionImageView"
        app:layout_constraintTop_toTopOf="@+id/rowActionImageView" />

    <TextView
        android:id="@+id/rowActionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:text="Date Action"
        app:layout_constraintBottom_toBottomOf="@+id/rowActionTypeAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rowActionTypeAction" />
</android.support.constraint.ConstraintLayout>