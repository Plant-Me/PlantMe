<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/backgrounradius">

    <TextView
        android:id="@+id/tvActionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Action Name"
        app:layout_constraintBottom_toBottomOf="@+id/ivActionImage"
        app:layout_constraintStart_toEndOf="@+id/ivActionImage"
        app:layout_constraintTop_toBottomOf="@+id/tvMyPlantName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvMyPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="My Plant Name"
        app:layout_constraintStart_toEndOf="@+id/ivActionImage"
        app:layout_constraintTop_toTopOf="@+id/ivActionImage" />

    <ImageView
        android:id="@+id/ivActionImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />
</android.support.constraint.ConstraintLayout>