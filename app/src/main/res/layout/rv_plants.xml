<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgrounradius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/ivPlant"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Plant Name"
        app:layout_constraintStart_toEndOf="@+id/ivPlant"
        app:layout_constraintTop_toTopOf="@+id/ivPlant" />

    <TextView
        android:id="@+id/tvPlantUsage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:inputType="textMultiLine"
        android:text="Plant Usage"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlant"
        app:layout_constraintStart_toEndOf="@+id/ivPlant"
        app:layout_constraintTop_toBottomOf="@+id/tvPlantName"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>