<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/actionDialogArroser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Répéter "
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/actionDialogSpinnerTypeRepetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/actionDialogArroser"
        app:layout_constraintStart_toEndOf="@+id/actionDialogArroser"
        app:layout_constraintTop_toBottomOf="@+id/actionDialogArroser"
        app:layout_constraintTop_toTopOf="@+id/actionDialogArroser" />

    <Button
        android:id="@+id/actionDialogButtonMinus"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_small"
        android:padding="0dp"
        android:text="-"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/actionDialogSpinnerTypeRepetition"
        app:layout_constraintStart_toEndOf="@+id/actionDialogSpinnerTypeRepetition"
        app:layout_constraintTop_toTopOf="@+id/actionDialogSpinnerTypeRepetition" />

    <Button
        android:id="@+id/actionDialogButtonPlus"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_small"
        android:padding="0dp"
        android:text="+"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/actionDialogButtonMinus"
        app:layout_constraintStart_toEndOf="@+id/actionDialogButtonMinus"
        app:layout_constraintTop_toTopOf="@+id/actionDialogButtonMinus" />

</android.support.constraint.ConstraintLayout>