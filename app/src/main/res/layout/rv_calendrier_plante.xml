<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rvNomCalendrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nom Calendrier :"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvNomCalendrier">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowJanvier"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowFevrier"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowMars"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowAvril"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowMai"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="5" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowJuin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowJuillet"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="7" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowAout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="8" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowSeptembre"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="9" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowOctobre"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="10" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowNovembre"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="11" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tableRowDecembre"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/row_text_back"
                    android:gravity="center"
                    android:text="12" />
            </TableRow>

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>